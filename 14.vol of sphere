#include <iostream>
using namespace std;

int main() {
    float radius, volume;

    cout << "Calculate the volume of a sphere:\n";
    cout << "---------------------------------------\n";

    cout << "Input the radius of a sphere: ";
    cin >> radius;

    volume = (4.0 / 3) * 3.14159 * radius * radius * radius;

    cout << "The volume of a sphere is: " << volume << endl;

    return 0;
}
