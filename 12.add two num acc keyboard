#include <iostream>

using namespace std;

int main() {
    int num1, num2;

    cout << "Sum of two numbers:\n";
    cout << "-------------------------\n";

    cout << "Input 1st number: ";
    cin >> num1;

    cout << "Input 2nd number: ";
    cin >> num2;

    int sum = num1 + num2;

    cout << "The sum of the numbers is: " << sum << endl;

    return 0;
}
